<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fromtoday">

    <!-- AlarmManager -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 파이어베이스 SDK -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Background Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 로케이션 퍼미션 입니다. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="8667f8f834c8f1dd82a4bc2a7c03ead7" />
        <!--        구글 API키값 추가입니다-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDdEDeBBhpQkPZBaAFavsw9a_q_yiJqwn4">
        </meta-data>
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"></activity>
        <activity android:name=".MyInfoActivity"></activity>
        <activity android:name=".FoodDataActivity"></activity>
        <!--    액티비티 이동 선언 입니다-->
        <activity android:name=".Activity_Walk"></activity>
        <activity android:name=".Activity_Run"></activity>
        <activity android:name=".Activity_Bike"></activity>

        <!-- Alarm Activity -->
        <activity android:name=".AlarmActivity"/>
        <!-- Alarm Manager -->
        <receiver android:name=".AlarmSetData" >
            <intent-filter>
                <action android:name="android.intent.action.sec" />
            </intent-filter>
        </receiver>

        <!-- Foreground Service -->
        <service android:name=".StepService" />
        <receiver android:name="AlarmReceiver"/>
        <!-- Foreground Service -->
        <service
            android:name=".LocationUpdatesService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location" />


    </application>

</manifest>
