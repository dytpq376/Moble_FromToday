                <!--                            android:textColor="@color/Gray"-->
                <!--                            android:text="/ 6000 걸음 "/>-->
                <!--                    </LinearLayout>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ****************************************** -->
        <!-- 맨아래 카드뷰가 안짤리도록 빈 ImageView 삽입 -->
        <!-- ****************************************** -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
    </LinearLayout>
