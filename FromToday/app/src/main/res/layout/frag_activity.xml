                <!--                            android:id="@+id/tvStepCount"-->
                <!--                            android:layout_width="wrap_content"-->
                <!--                            android:layout_height="wrap_content"-->
                <!--                            android:textSize="15dp"-->
                <!--                            android:textColor="@color/Blue"-->
